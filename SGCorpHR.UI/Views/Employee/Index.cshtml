
@{
    ViewBag.Title = "Employee Directory";
}

<h2>Employee Directory</h2>
<div class="row">
<div class="col-xs-6">
    <h4>Search by Department</h4>
    <div class="form-group">
        <input type="text" id="departmentID" class="form-control" />
    </div>
    <button class="btn btn-primary" onclick="find()">Search</button>
</div>
</div>

<div class="row">
    <table id="employees" class="table">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Hire Date</th>
                <th>Manager Name</th>
                <th>Department Name</th>
                <th>Location Name</th>
                <th>Status</th>

            </tr>
        </thead>
        <tbody></tbody>
    </table>

</div>

@section Scripts {
    <script src="~/Scripts/app/displayAllEmp.js"> </script>
}