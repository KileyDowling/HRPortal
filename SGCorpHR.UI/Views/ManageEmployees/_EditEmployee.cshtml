<!-- Modal -->

<div class="modal fade" id="updateEmptModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-6">
                        <h2>Update Employee</h2>
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" id="updatedFirstName" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" id="updatedLastName" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label>Location ID</label>
                            <input type="text" id="updatedLocationID" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label>Status</label>
                            <input type="text" id="updatedStatus" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label>Department ID</label>
                            <input type="text" id="updatedDepartmentID" class="form-control"/>
                        </div>
                        <div>
                            <label>Hire Date</label>
                            <input type="text" id="formattedhiredate" class="form-control" readonly />
                            <p hidden id="hiredate"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSaveUpdatedEmp">Save</button>
            </div>
        </div>
    </div>
</div>

